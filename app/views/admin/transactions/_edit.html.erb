<%= semantic_form_for @latest_edition, :url => admin_transaction_edition_path(@transaction, @latest_edition), :as => :edition do |f| %>
  <%= f.inputs do %>
    <%= render :partial => 'admin/shared/title_etc', :locals => {:f => f} %>
    <%= f.input :introduction, :label => 'Introductory paragraph', :hint => 'Set the scene for the user. What is about to happen? (eg. "you will need to fill in a form, print it out and take it to the post office")', :as => :text, :input_html => {:rows => 2} %>
    <%= f.input :will_continue_on, :hint => 'Text to follow the statement "This will continue on". eg. "the HMRC website"' %>
    <%= f.input :link, :label => 'Link to start of transaction', :hint => 'Link as deep as possible.' %>
    <%= f.input :more_information, :as => :text %>
    <%= f.input :expectation_ids, :label => "Expectations", :as => :check_boxes, :collection => TransactionEdition.expectation_choices %>
  <% end %>
<% end %>
