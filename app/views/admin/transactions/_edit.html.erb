<%= semantic_form_for @resource, :url => admin_edition_path(@resource), :as => :whole_edition do |f| %>
  <%= f.inputs do %>
    <%= render :partial => 'admin/shared/title_etc', :locals => {:f => f} %>
    <%= f.input :introduction, :label => 'Introductory paragraph', :hint => 'Set the scene for the user. What is about to happen? (eg. "you will need to fill in a form, print it out and take it to the post office")', :as => :text, :input_html => {:rows => 2,:disabled => @resource.published? } %>
    <%= f.input :will_continue_on, :hint => 'Text to follow the statement "This will continue on". eg. "the HMRC website"', :input_html => { :disabled => @resource.published? } %>
    <%= f.input :link, :label => 'Link to start of transaction', :hint => 'Link as deep as possible.', :input_html => { :disabled => @resource.published? } %>
    <%= f.input :more_information, :as => :text, :input_html => { :disabled => @resource.published? } %>
    <%= f.input :alternate_methods, :as => :text, :label => "Other ways to apply", :hint => "Alternative ways of completing this transaction. Not displayed on front end if left blank.", :input_html => { :disabled => @resource.published? } %>
    <%= f.input :minutes_to_complete, :input_html => { :disabled => @resource.published? } %>
    <%= f.input :uses_government_gateway, :as => :boolean, :input_html => { :disabled => @resource.published? } %>
    <%= f.input :expectation_ids, :label => "Expectations", :as => :check_boxes, :collection => TransactionEdition.expectation_choices, :input_html => { :disabled => @resource.published? } %>
  <% end %>
<% end %>
