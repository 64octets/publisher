<%= semantic_form_for @latest_edition, :url => admin_answer_edition_path(@answer, @latest_edition), :as => :edition do |f| %>
  <%= f.inputs do %>
    <%= f.input :title, :label => "Name of answer" %>
    <%= f.input :body, :as => :text %>
  <% end %>
<% end %>


<% content_for :extra_javascript do %>
<script type="text/javascript">
  $(function () {
    $('#edition_title')[0].focus();
    $('input.title').
      live('change', function () {
        var title_field = $(this);
        var slug_field = title_field.closest('.part').find('.slug');
        if (slug_field.text() == '') {
          slug_field.val(GovUKGuideUtils.convertToSlug(title_field.val()));
        }
      });
  });
</script>
<% end %>