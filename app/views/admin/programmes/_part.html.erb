<div class="part group">
 <h3><a href="#"><%= f.object.title.present? ? f.object.title : 'Untitled part' %></a></h3>
  <%= f.inputs do %>
    <%= f.input :title, :input_html => { :class => 'title', :disabled => @latest_edition.is_published? }, :hint => true, :required => true %>
    <%= f.input :body, :as => :text, :required => true, :input_html => {:disabled => @latest_edition.is_published?} %>
    <%= f.input :slug, :input_html => { :class => 'slug', :disabled => @latest_edition.is_published? }, :hint => true, :required => true, :hint => true %>
    <%= f.input :order, :as => :hidden, :input_html => { :class => 'order', :disabled => @latest_edition.is_published? } %>
  <% end %>
</div>
