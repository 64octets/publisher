<div class="part group">
 <h3><a href="#"><%= f.object.title.present? ? f.object.title : 'Untitled part' %></a></h3>
  <%= f.inputs do %>
    <%= f.input :title, :input_html => { :class => 'title' }, :label => false, :hint => true, :required => true %>
    <%= f.input :body, :as => :text, :required => true %>
    <%= f.input :slug, :input_html => { :class => 'slug' }, :hint => true, :required => true, :hint => true %>
    <%= f.input :order, :as => :hidden, :input_html => { :class => 'order' } %>
    <li><%= f.remove_link "Remove this part" %></li>
  <% end %>
</div>
