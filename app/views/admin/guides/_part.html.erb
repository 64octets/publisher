<div class="accordion-group">
  <div class="accordion-heading">
    <a class="accordion-toggle" data-toggle="collapse" data-parent="#parts" href="#<%= f.object.slug %>">
      <i class="icon-chevron-down"></i>
      <%= f.object.title.present? ? f.object.title : 'Untitled part' %>
    </a>
  </div>
  <div id="<%= f.object.slug %>" class="accordion-body collapse in">
    <div class="accordion-inner">

      <div class="row-fluid">

        <div class="span8">

          <%= f.inputs do %>
            <%= f.input :title, :input_html => { :class => 'span7', :disabled => @resource.published? }, :hint => true, :required => true %>
            <%= f.input :body, :as => :text, :required => true, :input_html => { :class => 'span7', :disabled => @resource.published? } %>
            <%= f.input :slug, :input_html => { :class => 'span7', :disabled => @resource.published? }, :hint => true, :required => true %>
            <%= f.input :order, :as => :hidden, :input_html => { :class => 'order', :disabled => @resource.published? } %>

          <!--
          <label>Title</label>
          <input type="text" class="span7" placeholder="" value="After you apply">
          <i class="icon-question-sign" rel="popover" data-content="Edit this text to rename this part" data-original-title="Help"></i>

          <label>Body</label>
          <textarea class="input-xlarge span7" rows="12"></textarea>

          <label>Slug</label>
          <input type="text" class="span7" placeholder="" value="after-you-apply">
          <i class="icon-question-sign" rel="popover" data-content="Eg. title-of-part (no spaces, apostrophes, etc)." data-original-title="Help"></i>
          -->
        </div>
        <div class="span4">

          <label>Formatting Guide</label>
          <textarea class="input-xlarge span4" rows="28"></textarea>
        </div>
      </div><!--/.row-fluid -->

      <% unless @resource.published? %>
      <div class="row-fluid">
        <div class="span12">
          <hr>
          <%= f.remove_link "Remove this part" %>
        </div>
      </div><!--/.row-fluid -->
      <% end %>

    </div>
  </div>
  <% end %>
</div>
