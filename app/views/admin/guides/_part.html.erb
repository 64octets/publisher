<div class="part group">
 <h3><a href="#"><%= f.object.title.present? ? f.object.title : 'Untitled part' %></a></h3>
  <%= f.inputs do %>
    <%= f.input :title, :input_html => { :class => 'title', :disabled => @resource.published? }, :hint => true, :required => true %>
    <%= f.input :body, :as => :text, :required => true, :input_html => {:disabled => @resource.published?} %>
    <%= f.input :slug, :input_html => { :class => 'slug', :disabled => @resource.published? }, :hint => true, :required => true, :hint => true %>
    <%= f.input :order, :as => :hidden, :input_html => { :class => 'order', :disabled => @resource.published? } %>
    
    <% unless @resource.published? %>
      <li><%= f.remove_link "Remove this part" %></li>
    <% end %>
  <% end %>
</div>
