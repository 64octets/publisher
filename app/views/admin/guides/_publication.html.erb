<tr>
  <td class="<%= publication.class.name.downcase %>">
    <%= publication.title %><br />
    <% if tab && tab == :published %>
      v.<%= publication.published_edition.version_number %>
      <% if publication.has_drafts %>
        (v.<%= publication.latest_edition.version_number %> in draft)
      <% end%>
    <% else %>
      v.<%= publication.latest_edition.version_number %>
    <% end %>
  </td>
  <td>

     <% if publication.can_create_new_edition? %>
        <%= form_tag admin_editions_path(publication) do %>
          <%= image_submit_tag '/images/icon-publisher-create-new-edition.png', :alt => 'Create new edition of this publication', :title => 'Create new edition of this publication' %>
        <% end %>
      <% elsif tab && tab == :published %>
        <%= link_to [:admin, publication] do %>
        'Edit in-progress draft'
        <% end %>
      <% else %>
        <%= link_to [:admin, publication] do %>
        <%= image_tag '/images/icon-publisher-edit.png', :alt => 'Edit this publication', :title => 'Edit this publication' %>
        <% end %>
      <% end %>

    <% if publication.class == Guide %>

      <% if publication.latest_edition.parts.any? and publication.latest_edition.parts.first.slug.present? %>
        <%= link_to preview_edition_path(publication.latest_edition) do %>
          <%= image_tag '/images/icon-publisher-preview.png', :alt => 'Preview this publication', :title => 'Preview this publication', :class => 'preview' %>
        <% end %>
      <% else %>
        Preview
      <% end %>

    <% else %>
      <%= link_to preview_edition_path(publication.latest_edition) do %>
        <%= image_tag '/images/icon-publisher-preview.png', :alt => 'Preview this publication', :title => 'Preview this publication', :class => 'preview' %>
      <% end %>
    <% end %>

  </td>
</tr>