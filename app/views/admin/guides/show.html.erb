<p>Viewing Edition <%= @latest_edition.version_number %></p>
<%= button_to 'Create new Edition', admin_guide_editions_path(@guide) %>

<div id="guide-nav">
  <ul>
    <li><a href="#edit">Edit</a></li>
    <li><a href="#metadata">Metadata</a></li>
    <li><a href="#history">History</a></li>
  </ul>
  <div id="edit">
    <%= render 'edit' %>
  </div>
  <div id="metadata">
    <%= render 'metadata' %>
  </div>
  <div id="history">
    <%= render 'history' %>
  </div>
</div>

<% content_for :extra_javascript do %>
<script type="text/javascript" charset="utf-8">
$(function () { $('#guide-nav').tabs(); });
</script>
<% end %>