<div id="guide-nav">
  <ul>
    <li><a href="#new">New</a></li>
    <li><a href="#published">Published</a></li>
    <li><a href="#archive">Archive</a></li>
    <li><a href="#review-requested">Review Requested</a></li>
  </ul>

  <div id="new">
    <table cellspacing="0">
      <thead>
        <tr>
          <th>Title</th>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% @guides.each do |guide| %>
        <tr>
          <td>
            <%= guide.title %>
          </td>
          <td>
            <%= link_to 'Edit', [:admin, guide] %>
            <%= link_to 'Preview', '#' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div id="published">
    <p>This will list published guides</p>
  </div>
  <div id="archive">
    <p>This will list archived guides</p>
  </div>
  <div id="review-requested">
    <p>This will list guides pending review</p>
  </div>
</div>

<p class="button"><%= link_to '+ Add New', new_admin_guide_path %></p>

<% content_for :extra_javascript do %>
<script type="text/javascript">
$(function () { $('#guide-nav').tabs(); });
</script>
<% end %>