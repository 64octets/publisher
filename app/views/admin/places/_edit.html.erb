<%= semantic_form_for @resource, :url => admin_edition_path(@resource), :as => :whole_edition do |f| %>
  <%= f.inputs do %>
    <%= render :partial => 'admin/shared/title_etc', :locals => {:f => f} %>
    <%= f.input :place_type, :hint => "This is the 'slug' assigned in the imminence app", :input_html => { :disabled => @resource.published? } %>
    <%= f.input :introduction, :as => :text, :input_html => {:rows => 2, :disabled => @resource.published? } %>
    <%= f.input :more_information, :as => :text, :input_html => { :disabled => @resource.published? } %>
    <%= f.input :expectation_ids, :label => "Expectations", :as => :check_boxes, :collection => PlaceEdition.expectation_choices, :input_html => { :disabled => @resource.published? } %>
  <% end %>
<% end %>
