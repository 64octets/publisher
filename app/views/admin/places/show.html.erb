<h2>Viewing Edition <%= @latest_edition.version_number %> of &ldquo;<%= @place.title %>&rdquo;</h2>
<p>Status: <%= @latest_edition.latest_status_action %></p>

<%= render 'admin/shared/review_or_fact_check' %>

<%= render :partial => 'admin/shared/workflow_buttons' %>

<div id="place-nav" class="publication-nav">
  <ul>
    <li><a href="#edit">Edit</a></li>
    <li><a href="#metadata">Metadata</a></li>
    <li><a href="#history">History &amp; Notes</a></li>
  </ul>
  <div id="edit">
    <%= render '/admin/places/edit' %>
  </div>
  <div id="metadata">
    <%= render :partial => '/admin/shared/metadata', :locals => {:publication => @place} %>
  </div>
  <div id="history">
    <%= render :partial => '/admin/shared/history', :locals => {:publication => @place} %>
  </div>
</div>

<% content_for :extra_javascript, javascript_include_tag('/guide-assets/javascripts/publications') %>
<% content_for :page_title, "Editing #{@place.title}" %>
