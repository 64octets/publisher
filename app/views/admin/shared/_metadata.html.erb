<%= semantic_form_for([:admin, publication], :html => { :class => 'publication'}) do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :label => raw("Internal name <small>(for internal tracking, not displayed on site)</small>") %>
    <%= f.input :slug, :hint => true %>
    <%= f.input :tags, :hint => true %>
    <%= f.input :section, :as => :string %>
    <%= f.input :related_items, :as => :text, :label => "Related items", :input_html => {:rows => 4} %>
    <%= f.input :audiences, :as => :check_boxes, :collection => Guide::AUDIENCES %>
  <% end %>
<% end %>