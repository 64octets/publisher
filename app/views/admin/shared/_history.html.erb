<%= semantic_form_for(:note, :url=> admin_notes_path) do |f| %>
  <%= f.inputs do %>
    <%= hidden_field_tag :publication_id, publication.id %>
    <%= f.input :comment, :label => 'Note', :as => :text, :input_html => { :rows => 3, :cols => 120 }, :hint => 'Don&rsquo;t forget to save your note when you have finished!' %>
    <li id="note_comment_update"><input class="update" name="commit" type="submit" value="Save Note"></li>
  <% end %>
<% end %>

<hr />

<%= render collection: @resource.history, partial: '/admin/shared/edition_history', as: 'edition' %>
