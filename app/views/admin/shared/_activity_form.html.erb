<%= semantic_form_for(:activity, :url => url, :html => {:title => title, :class => 'button_to also_save_edition', :style => 'display: none', :id => id}) do |f| %>
  <%= f.inputs do %>
    <input type="hidden" value="<%= activity %>" name="activity[request_type]">
    <%= f.input :comment, :as => :text, :input_html => {:cols => 60, :rows => 3} %>
    <% if title == "Fact check" %>
      <%= f.input :email_addresses  %>

      <li id="activity_customised_message_input" class="text required">
        <label for="activity_customised_message">Customised message<abbr title="required">*</abbr></label>
        <textarea rows="12" name="activity[customised_message]" id="activity_customised_message" cols="60">
          <%- @edition = @latest_edition %>
<%= render :template => 'noisy_workflow/request_fact_check.text' %>
        </textarea>
      </li>
    <% end %>
  <% end %>
  <%= f.buttons do %>
    <li>
      <input type="submit" class="button_to cancel_button" value="Cancel">
    </li>
    <%= f.commit_button 'Save' %>
  <% end %>
<% end %>
