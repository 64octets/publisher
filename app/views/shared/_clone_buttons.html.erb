<%- if edition.can_create_new_edition? && (edition.class == edition_class) -%>
  <%- to_classes.each do |to_class| -%>
  	<%= button_to "Create as new #{to_class.to_s.gsub('Edition', '')} edition",
      duplicate_edition_path(@resource, {from: edition_class.to_s, to: to_class.to_s}),
      :method => :post, :class => "btn" %>
  <%- end -%>
<%- end -%>
