<%= semantic_bootstrap_nested_form_for @resource, :url => edition_path(@resource), :as => :edition, :html => { :id => 'edition-form' } do |f| %>
  <%= f.inputs do %>
    <%= render :partial => 'shared/common_edition_attributes', :locals => {:f => f} %>
  <% end %>

  <hr>

  <div class="row">

    <div class="col-md-8">

      <h3 class="remove-top-margin add-bottom-margin">Parts</h3>

      <section class="panel-group" id="parts">
        <%= f.semantic_fields_for :parts, @ordered_parts do |part| %>
          <%= render :partial => '/shared/part', :locals => { :f => part, :editable => false } %>
        <% end %>
      </section>

    </div>

    <div class="col-md-4">
      <h3 class="remove-top-margin add-bottom-margin">Govspeak help</h3>

      <div class="well">
        <%= render "../shared/govspeak_help" %>
      </div>
    </div>
  </div>

  <%= render partial: 'shared/workflow_buttons', locals: { f: f } %>
<% end %>
