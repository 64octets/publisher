<div class="page-title">
  <h1>Downtime</h1>
</div>

<!--<a href="#" class="btn btn-success add-bottom-margin">Add downtime</a>-->

<table class="table table-bordered table-striped" data-module="filterable-table">
  <thead>
    <tr class="table-header">
      <td>Service start page</td>
      <td>Service status</td>
      <td>Action</td>
      <!--<td>Assignee</td>
      <td>Updated</td>-->
    </tr>
    <tr class="if-no-js-hide table-header-secondary">
      <td colspan="5">
        <form>
          <label for="table-filter" class="rm">Filter organisations</label>
          <input id="table-filter" type="text" class="form-control normal js-filter-table-input" placeholder="Filter table">
        </form>
      </td>
    </tr>
  </thead>
  <tbody>
    <% t = @transactions.last %>
    <tr>
      <td>
        <h4 class="publication-table-title">
          <a href="/downtime/scheduled"><%= t.title %></a>
        </h4>
        <span class="text-muted">/<%= t.slug %></span>
      </td>
      <td>
        Scheduled downtime<br />
        <span class="text-muted">10 Oct to 11 Oct</span>
      </td>
      <td>
        <a href="#" class="btn btn-default">Edit downtime</a>
      </td>
    </tr>
    <tr>
      <td>
        <h4 class="publication-table-title">
          <a href="/downtime/liveunplanned"><%= t.title %></a>
        </h4>
        <span class="text-muted">/<%= t.slug %></span>
      </td>
      <td>
        Unavailable<br />
        <span class="text-muted">Unplanned downtime</span>
      </td>
      <td>
        <a href="#" class="btn btn-default">Edit</a>
        <a href="#" class="btn btn-danger">Delete</a>
      </td>
    </tr>
    <% @transactions.each do |t| %>
    <tr>
      <td>
        <h4 class="publication-table-title">
          <a href="/downtime/schedule"><%= t.title %></a>
        </h4>
        <span class="text-muted">/<%= t.slug %></span>
      </td>
      <td>Live</td>
      <td>
        <a href="#" class="btn btn-default">Add downtime</a>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
