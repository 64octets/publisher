<%= semantic_form_for @resource, :url => edition_path(@resource), :as => :edition, :html => { :id => 'edition-form' } do |f| %>
  <%= f.inputs do %>
    <%= render :partial => 'shared/title_etc', :locals => {:f => f} %>
    <%= f.input :body,
                :as => :text,
                :hint => 'The body text is overwritten by the service feedback survey',
                :input_html => { :class => 'col-md-12', :disabled => 'disabled' } %>
  <% end %>
<% end %>
